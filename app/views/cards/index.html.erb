<h1>Listing cards</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Type</th>
    <th>Validity</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.number %></td>
    <td><%= card.type %></td>
    <td><%= card.validity %></td>
    <td><%= card.user %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


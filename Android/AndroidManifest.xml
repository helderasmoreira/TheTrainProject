<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.traincompany.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET" /> 
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.traincompany.account.AccountManager"
            android:label="@string/title_activity_account_manager"
            android:noHistory="true" >
        </activity>
         <activity
            android:name="pt.traincompany.search.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="pt.traincompany.search.SearchResults"
            android:label="@string/title_activity_search" >
        </activity>
         <activity
            android:name="pt.traincompany.search.SearchResultExtended"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="pt.traincompany.account.CardManagement"
            android:label="@string/title_activity_card_management"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="pt.traincompany.account.AddCard"
            android:label="@string/title_activity_add_card" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.MyTickets"
            android:label="@string/title_activity_my_tickets" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.TicketActivity"
            android:label="@string/title_activity_ticket" >
        </activity>
    </application>

</manifest>
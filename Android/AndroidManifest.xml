<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.traincompany.main"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.traincompany.account.AccountManager"
            android:label="@string/title_activity_account_manager"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="pt.traincompany.map.Map"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="pt.traincompany.search.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="pt.traincompany.search.SearchResults"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="pt.traincompany.search.SearchResultExtended"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="pt.traincompany.account.CardManagement"
            android:label="@string/title_activity_card_management"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.MyTickets"
            android:label="@string/title_activity_my_tickets" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.TicketActivity"
            android:label="@string/title_activity_ticket" >
        </activity>
        <activity
            android:name="pt.traincompany.searchHistory.MyHistory"
            android:label="@string/title_activity_my_history" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.MyTicketsUnpaid"
            android:label="@string/title_activity_my_tickets_unpaid" >
        </activity>
        <activity
            android:name="pt.traincompany.tickets.MyTicketsPaid"
            android:label="@string/title_activity_my_tickets_paid" >
        </activity>
    </application>

</manifest>
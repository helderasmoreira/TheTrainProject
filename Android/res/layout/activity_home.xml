<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#4E4D4A" >
	
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingTop="100dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/bottom_imagem_menu"
                android:paddingRight="@dimen/bottom_imagem_menu"
                android:src="@drawable/horarios" />

            <ImageView
                android:id="@+id/btnMyTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/bottom_imagem_menu"
                android:src="@drawable/meus_bilhetes" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:gravity="center_horizontal" >
            
             <ImageView
                 android:id="@+id/btnHistoric"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingRight="@dimen/bottom_imagem_menu"
                 android:src="@drawable/historico" />

            <ImageView
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gestao" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:gravity="center_horizontal"
        android:src="@drawable/logo" />

</RelativeLayout>